{
  "version": "3.2.0",
  "license": "MIT",
  "name": "number-scroller",
  "description": "A lightweight react-component that animates your numbers.",
  "author": "Bimochan Shrestha",
  "contributors": [
    "Kevin Vandy", "Biplap Bhattarai"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/sbimochan/number-scroller.git"
  },
  "keywords": [
    "react",
    "animation",
    "number-animator"
  ],
  "bugs": {
    "url": "https://github.com/sbimochan/number-scroller/issues"
  },
  "homepage": "https://github.com/sbimochan/number-scroller#readme",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook -o docs-build"
  },
  "module": "dist/number-scroller.esm.js",
  "size-limit": [
    {
      "path": "dist/number-scroller.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/number-scroller.esm.js",
      "limit": "10 KB"
    }
  ],
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@babel/core": "^7.13.1",
    "@size-limit/preset-small-lib": "^4.9.2",
    "@storybook/addon-essentials": "^6.1.18",
    "@storybook/addons": "^6.1.18",
    "@storybook/react": "^6.1.18",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "babel-loader": "^8.2.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^5.1.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-is": "^17.0.1",
    "size-limit": "^4.9.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.1.5"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "dependencies": {}
}
